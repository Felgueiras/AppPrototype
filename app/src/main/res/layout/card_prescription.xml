<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/removePrescription"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
        android:scaleType="centerCrop"
        card_view:srcCompat="@drawable/ic_close_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prescriptionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text="Medicamento"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="20dp">

            <Button
                android:id="@+id/startCriteria"
                android:layout_width="@dimen/criteriaInfoSize"
                android:layout_height="@dimen/criteriaInfoSize"
                android:layout_margin="2dp"
                android:background="@drawable/criteria_start"
                android:clickable="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/stoppCriteria"
                android:layout_width="@dimen/criteriaInfoSize"
                android:layout_height="@dimen/criteriaInfoSize"
                android:layout_margin="2dp"
                android:background="@drawable/criteria_start"
                android:clickable="false"
                android:rotation="180"
                android:visibility="visible" />

            <Button
                android:id="@+id/beersCriteria"
                android:layout_width="@dimen/criteriaInfoSize"
                android:layout_height="@dimen/criteriaInfoSize"
                android:layout_margin="2dp"
                android:background="@drawable/criteria_beers"
                android:clickable="false"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/prescriptionDate"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="prescription date"/>

    <TextView
        android:id="@+id/prescriptionNotes"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="notes"/>


</LinearLayout>