<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Infos about Patient-->
    <include
        android:id="@+id/patientInfoInclude"
        layout="@layout/patient_info_data" />

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/patientInfoInclude"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000" />


    <FrameLayout
        android:layout_below="@+id/separator"
        android:id="@+id/patientSessionsFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/patient_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patient_createSession"
        android:layout_alignParentRight="true"
        fab:fab_plusIconColor="@color/half_black"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/white_pressed"
        fab:fab_icon="@drawable/ic_favorite_add"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"/>

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/patient_createSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:fab_plusIconColor="@color/half_black"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/white_pressed"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        fab:fab_title="@string/add_session"
        android:layout_marginStart="16dp"/>


</RelativeLayout>