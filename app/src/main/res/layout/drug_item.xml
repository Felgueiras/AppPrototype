<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Medicamento"
        android:textSize="18sp"
        android:paddingBottom="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        >

        <Button
            android:id="@+id/startCriteria"
            android:layout_width="@dimen/criteriaInfoSize"
            android:layout_height="@dimen/criteriaInfoSize"
            android:background="@drawable/criteria_start"
            android:clickable="false"
            android:layout_margin="2dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/stoppCriteria"
            android:layout_width="@dimen/criteriaInfoSize"
            android:layout_height="@dimen/criteriaInfoSize"
            android:background="@drawable/criteria_stopp_round"
            android:clickable="false"
            android:layout_margin="2dp"
            android:rotation="180"
            android:visibility="visible" />

        <Button
            android:id="@+id/beersCriteria"
            android:layout_width="@dimen/criteriaInfoSize"
            android:layout_height="@dimen/criteriaInfoSize"
            android:background="@color/beersCriteriaColorFaded"
            android:clickable="false"
            android:layout_margin="2dp"
            android:visibility="visible" />


    </LinearLayout>


</LinearLayout>