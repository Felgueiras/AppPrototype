<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rafael.appprototype">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="patients.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.rafael.appprototype.DataTypes.DB.Patient,                                      com.example.rafael.appprototype.DataTypes.DB.FreeTextField,                          com.example.rafael.appprototype.DataTypes.DB.Session,             com.example.rafael.appprototype.DataTypes.DB.GeriatricScale,             com.example.rafael.appprototype.DataTypes.DB.Scoring,             com.example.rafael.appprototype.DataTypes.DB.Grading,             com.example.rafael.appprototype.DataTypes.DB.Question,             com.example.rafael.appprototype.DataTypes.DB.Choice" />

        <!-- Intro -->
        <activity
            android:name=".Introduction.MyIntro"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Tutorial.OtherActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Tutorial.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Tutorial.CalendarViewTutorial" />
        <activity android:name=".Tutorial.DatePickerActivity" />
        <activity
            android:name=".Main.PublicArea"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LockScreen.LockScreenActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.PrivateArea"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyPreferencesActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity android:name=".Register.RegisterUser" />
        <activity android:name=".LoginRegister.RegisterUser"></activity>
    </application>

</manifest>