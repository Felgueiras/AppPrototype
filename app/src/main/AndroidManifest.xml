<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felgueiras.apps.geriatric_helper">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.felgueiras.apps.geriatric_helper.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="patients.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.felgueiras.apps.geriatric_helper.DataTypes.DB.Patient,  
                                      com.felgueiras.apps.geriatric_helper.DataTypes.DB.FreeTextField, 
                                                              com.felgueiras.apps.geriatric_helper.DataTypes.DB.Session,    
              com.felgueiras.apps.geriatric_helper.DataTypes.DB.GeriatricScale,    
         com.felgueiras.apps.geriatric_helper.DataTypes.DB.Scoring,         
        com.felgueiras.apps.geriatric_helper.DataTypes.DB.Grading,     
            com.felgueiras.apps.geriatric_helper.DataTypes.DB.Question,     
            com.felgueiras.apps.geriatric_helper.DataTypes.DB.Choice" />

        <!-- Intro -->
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.Introduction.MyIntro"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.Main.PublicArea"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.LockScreen.LockScreenActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.Main.PrivateAreaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.Settings"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity android:name="com.felgueiras.apps.geriatric_helper.PersonalAreaAccess.RegisterUser" />
        <activity
            android:name="com.felgueiras.apps.geriatric_helper.VerticalViewPager.CustomViewPagerActivity"
            android:label="@string/title_activity_custom_view_pager"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>