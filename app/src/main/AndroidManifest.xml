<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rafael.appprototype">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="patients.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.rafael.appprototype.DataTypes.DB.Patient,                            com.example.rafael.appprototype.DataTypes.DB.FreeTextField,                            com.example.rafael.appprototype.DataTypes.DB.Session,                            com.example.rafael.appprototype.DataTypes.DB.GeriatricScale,                            com.example.rafael.appprototype.DataTypes.DB.Scoring,                            com.example.rafael.appprototype.DataTypes.DB.Grading,                            com.example.rafael.appprototype.DataTypes.DB.Question,                            com.example.rafael.appprototype.DataTypes.DB.Choice" />

        <!-- Intro -->
        <activity
            android:name=".Introduction.MyIntro"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Main.PublicArea"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LockScreen.LockScreenActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.PrivateAreaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity android:name=".PersonalAreaAccess.RegisterUser" />
        <activity
            android:name=".VerticalViewPager.CustomViewPagerActivity"
            android:label="@string/title_activity_custom_view_pager"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>